{
  "name": "demo",
  "version": "1.0.0",
  "description": "Demo-day starter",
  "author": "Write your name",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "test": "jest",
    "build": "nuxt build",
    "build:firebase": "npm run clean && npm run build && npm run copy && cd functions && npm install",
    "build:firebase:windows": "npm run clean && npm run build && npm run copy:windows && cd \"functions\" && npm install",
    "clean": "npm run clean:public && npm run clean:functions && npm run clean:static",
    "clean:functions": "rimraf \"functions/node_modules\" && rimraf \"functions/.nuxt\"",
    "clean:public": "rimraf \"public/**/*.*!(md)\" && rimraf \"public/_nuxt\"",
    "clean:static": "rimraf \"src/static/sw.js\"",
    "copy:windows": "npm run copy:nuxt:windows && npm run copy:static:windows",
    "copy:nuxt:windows": "xcopy \"functions\\.nuxt\\dist\\*\" \"public\\_nuxt\\\" /E /Y",
    "copy:static:windows": "xcopy \"src\\static\\*\" \"public\\\" /E /Y",
    "copy": "npm run copy:nuxt && npm run copy:static",
    "copy:nuxt": "mkdir public/_nuxt && cp -r functions/.nuxt/dist/* public/_nuxt",
    "copy:static": "cp -r src/static/* public",
    "start:firebase": "firebase serve --only functions,hosting",
    "deploy": "firebase deploy --only functions,hosting,firestore,storage"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.9.7",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/firebase": "^5.0.7",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "ant-design-vue": "^1.5.3",
    "cross-env": "^7.0.2",
    "firebase": "^7.14.0",
    "jwt-decode": "^2.2.0",
    "nuxt": "^2.12.2"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^2.0.2",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@nuxtjs/stylelint-module": "^3.2.2",
    "@vue/test-utils": "^1.0.0-beta.33",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-html": "^6.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-nuxt": "^0.5.2",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^25.3.0",
    "prettier": "^2.0.4",
    "stylelint": "^13.3.2",
    "vue-jest": "^3.0.5"
  }
}
